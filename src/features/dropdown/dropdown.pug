include ../../shared/ui/index.pug
include ../../entities/index.pug

mixin dropdown(options)
  - var isDate = options.isDate
  - var title = options.title
  - var defaultValue = options.defaultValue
  - var valuesList = options.valuesList

  if isDate
    .dropdown.dropdown_date
      +heading3(title).dropdown-label
      .dropdown-header.dropdown-header_full-rounded
        +body-text(defaultValue).dropdown-header__title
        span.material-symbols-outlined.dropdown-header__arrow expand_more
      .dropdown-calendar
        include ../../entities/calendar/calendar.pug
  else
    .dropdown.dropdown_default
      +heading3(title).dropdown-label
      .dropdown-header
        +body-text(defaultValue).dropdown-header__title
        span.material-symbols-outlined.dropdown-header__arrow expand_more
      .dropdown-list
        each value in valuesList
          +dropdown-list-item({title: value, quantity: 0})
        .dropdown-list__buttons
          button.dropdown-list__button_clear
            +heading3('Очистить')
          button.dropdown-list__button_apply
            +heading3('Применить')
